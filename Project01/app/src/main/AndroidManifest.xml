<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.step.id.project01">

    <supports-screens android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:xlargeScreens="true"
        android:anyDensity="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA2" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.MEDIA_CONTENT_CONTROL"
        tools:ignore="ProtectedPermissions" />

    <uses-feature
        android:name="android.hardware.camera2"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:largeHeap="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Defect.defectAddOn"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Defect Editor" />
        <activity
            android:name=".projectEditor"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="Project Editor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".defectEditor"
            android:label="Defect Editor">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Defect.defectList"
            android:label="Defect List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Project.projectList"
            android:label="Progress List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Project.projectAddOn"
            android:label="Project Add On" />
        <activity
            android:name=".registerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MonitorUserActivity"
            android:label="Users">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MonitorProjectActivity"
            android:label="Project List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MonitorUserActivity" />
        </activity>
        <activity
            android:name=".MonitorProjectAddOnActivity"
            android:label="Project Add On" />
        <activity android:name=".MonitorDefectActivity"
            android:label="Defect List">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MonitorUserActivity" />
        </activity>
        <activity android:name=".MonitorDefectAddOnActivity"
            android:label="Defect Add On">
        </activity>
        <activity
            android:name=".ProfileActivity"
            android:label="My profile">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="Forgot Password">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".LoginActivity" />
        </activity>

        <provider
            android:name="android.support.v4.content.FileProvider"
            android:authorities="com.step.id.project01.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>