<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:text="Inspection date"
        style="@style/CategoryStyle" />

    <TextView
        android:id="@+id/def_detailsDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/select_a_date"/>
    </LinearLayout>

    <EditText
        android:id="@+id/def_detailsDefect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="@string/defect"
        android:inputType="textMultiLine" />

    <EditText
        android:id="@+id/def_detailsComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16sdp"
        android:hint="@string/Pending_comment"
        android:inputType="textMultiLine" />


    <Button
        android:id="@+id/def_detailsConfirm"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@color/colorSecondary"
        android:text="Confirm"
        android:textColor="#fff" />

</LinearLayout>