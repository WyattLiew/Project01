<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_3sdp"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_10sdp"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:padding="@dimen/_10sdp"
                android:id="@+id/lg_pendTitle_textView"
                style="@style/projectHeaderTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAllCaps="true"
                android:textColor="#252c35"
                android:textSize="20sp"
                android:text="Project title"/>
            <TextView
                android:id="@+id/lg_pendDate_textView"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date"
                android:textColor="@color/colorText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/lg_pendConName_textView"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Client"
                style="@style/projectTextStyle"/>
            <TextView
                android:id="@+id/lg_pendNumber_textView"
                android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Number"
                style="@style/projectTextStyle"/>
        </LinearLayout>
        <TextView
            android:id="@+id/lg_pendConEmail_textView"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:paddingTop="@dimen/_6sdp"
            android:paddingBottom="@dimen/_6sdp"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="example@example.com.sg"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TableRow>
                <TextView
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location : "/>
                <TextView
                    android:id="@+id/lg_pendLocation_textView"
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Location"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">
            <TableRow>
                <TextView
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description : "/>
                <TextView
                    android:id="@+id/lg_pendDescription_textView"
                    android:paddingLeft="23dp"
                    android:layout_width="230dp"
                    android:layout_height="wrap_content"
                    android:text="Description"/>
            </TableRow>
        </TableLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp">
            <TableRow>
                <TextView
                    android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Notes : "/>

                <TextView
                    android:id="@+id/lg_pendNotes_textView"
                    android:paddingLeft="55dp"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:text="Notes"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>